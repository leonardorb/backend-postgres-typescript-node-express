    "express-joi-validation": "^5.0.1",
    "express-promise-router": "^4.1.1",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "http-status": "^1.7.4",
    "morgan": "^1.10.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20",
    "winston": "^3.14.2",
    "xss-clean": "^0.1.4"
