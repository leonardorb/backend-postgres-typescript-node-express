{
  "name": "backend-typescript-pern-stack",
  "version": "1.0.0",
  "description": "Backend TypeScript PERN Stack",
  "scripts": {
    "dev": "nodemon",
    "lint": "tslint --project .",
    "migration:create": "NODE_ENV=local npm run typeorm -- migration:create -n",
    "setup:local": "NODE_ENV=local npm run typeorm -- migration:run",
    "setup:test": "NODE_ENV=test npm run typeorm -- migration:run",
    "test": "NODE_ENV=test jest -i",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js"
  },
  "dependencies": {
    "@hapi/joi": "17.1.0",
    "bcrypt": "4.0.0",
    "compression": "1.7.4",
    "cors": "2.8.5",
    "dotenv-safe": "8.2.0",
    "express": "4.17.1",
    "express-joi-validation": "4.0.3",
    "express-promise-router": "3.0.3",
    "helmet": "3.21.2",
    "http-status": "1.4.2",
    "morgan": "1.9.1",
    "passport": "0.4.1",
    "passport-jwt": "4.0.0",
    "pg": "7.18.2",
    "reflect-metadata": "0.1.13",
    "typeorm": "0.2.22",
    "winston": "3.2.1"
  },
  "devDependencies": {
    "@types/bcrypt": "3.0.0",
    "@types/compression": "1.7.0",
    "@types/cors": "2.8.6",
    "@types/dotenv-safe": "8.1.0",
