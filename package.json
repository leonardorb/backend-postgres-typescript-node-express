    "@types/express-promise-router": "3.0.0",
    "@types/faker": "4.1.10",
    "@types/hapi__joi": "16.0.12",
    "@types/helmet": "0.0.45",
    "@types/http-status": "1.1.2",
    "@types/jest": "25.1.3",
    "@types/logform": "1.10.1",
    "@types/morgan": "1.7.37",
    "@types/node": "13.7.4",
    "@types/passport": "1.0.2",
    "@types/passport-jwt": "3.0.3",
    "@types/supertest": "2.0.8",
    "@types/winston": "2.4.4",
    "faker": "4.1.0",
    "jest": "25.1.0",
    "logform": "2.1.2",
    "nodemon": "2.0.2",
    "prettier": "1.19.1",
    "supertest": "4.0.2",
    "ts-jest": "25.2.1",
    "ts-node": "8.6.2",
    "tsconfig-paths": "3.9.0",
    "tslint": "6.0.0",
