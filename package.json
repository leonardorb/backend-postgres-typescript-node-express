    "test": "NODE_ENV=test jest -i",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js"
  },
  "dependencies": {
